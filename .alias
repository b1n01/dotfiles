#!/bin/sh
# Custom aliases here

#@doc v: Open neovim
alias v="nvim"

#@doc vi: Open neovim
alias vi="nvim"

#@doc gs: Git status 
alias gs="git status"

#@doc gd: Git diff
alias gd="git diff"

#@doc ga: Git add
alias ga="git add"

#@doc gc: Git commit with message
alias gc="git commit -m"

#@doc gl: A better git log
alias gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

#@doc cdb: Go to b1n01 directory
alias cdb="cd ~/dev/b1n01"

#@doc cdw: Go to wethod directory
alias cdw="cd ~/dev/wethod"

#@doc reload: Source all config files
alias reload="source ~/.dotfiles/.profile"
